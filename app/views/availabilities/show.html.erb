
<h1>Availabilities</h1>

<table class="ui selectable celled striped table padded">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Doctor</th>
     <!--  <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
  	

    <% @availabilities.each do |availability| %>
      <tr>
      	
      	<% if @id.to_i == availability.doctor_id %>
        <td><%= availability.start_time.strftime("%I:%M:%S") %></td>
        <td><%= availability.end_time.strftime("%I:%M:%S") %></td>
        <td><%= availability.doctor.name %></td>
        <!-- <td><%= link_to 'Show', availability %></td>
        <td><%= link_to 'Edit', edit_availability_path(availability) %></td>
        <td><%= link_to 'Destroy', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
       <% end %>

      </tr>
    <% end %>
    <%= link_to 'Back', doctors_path %>
  </tbody>
</table>

