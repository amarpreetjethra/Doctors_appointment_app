<h2 class="ui center aligned blue header">Patient Information</h2>
<table class="ui definition table user-info selectable">
<tr>
    <td>First Name:</td>
    <td><%= @patient.first_name %></td>
</tr>
<tr>
    <td>Last Name:</td>
    <td><%= @patient.last_name %></td>
</tr>
<tr>
    <td>Age:</td>
    <td><%= @patient.age %></td>
</tr>
<tr>
    <td>Date of Birth:</td>
    <td><%= @patient.dob.strftime('%m / %d / %Y') %></td>
</tr>
<tr>
    <td>Sex:</td>
    <td><%= @patient.sex %></td>
</tr>
<tr>
    <td>Phone:</td>
    <td><%= @patient.phone %></td>
</tr>

